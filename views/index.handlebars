<div class="row">
    <div class="col">
        <h3>Burgers that have no been devoured</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col">
        <h3>Burgers that have been devoured</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<br>
<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input class='form-control' type="text" id="burger" name="name">
    </div>

    <button class='btn btn-primary' type="submit">Submit</button>
</form>
